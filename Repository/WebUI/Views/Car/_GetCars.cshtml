@using Repository.Concrete.Entities
@model IEnumerable<Car>

@if (Model.Count() > 0)
{
    <div>
        <h2>Bil oversigt</h2>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(c => c.PlateNumber)</th>
                <th>@Html.DisplayNameFor(c => c.Manufacturer)</th>
                <th>@Html.DisplayNameFor(c => c.Model)</th>
                <th>@Html.DisplayNameFor(c => c.Year)</th>
                <th>@Html.DisplayNameFor(c => c.ChassisNumber)</th>
                
            </tr>
        </thead>
        <tbody id="customerTableBody">

            @foreach (Car c in Model)
            {
                <tr>
                    <td>@c.PlateNumber</td>
                    <td>@c.Manufacturer</td>
                    <td>@c.Model</td>
                    <td>@c.Year</td>
                    <td>@c.ChassisNumber</td>
                    <td>@Html.ActionLink("Edit", "EditCar", new { id = c.Id })</td>
                </tr>
            }
        </tbody>
    </table>
}