@using Repository.Concrete.Entities
@model Task
@{
    ViewBag.Title = "Tilføj Opgave";
}

<h2>Tilføj Opgave</h2>

@using (Html.BeginForm())
{
@Html.Hidden("CarId", (object)ViewBag.CarId.ToString())
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(t => t.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(t => t.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(t => t.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(t => t.CreatedBy, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(t => t.CreatedBy, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(t => t.CreatedBy, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tilføj" class="btn btn-default" />
            </div>
        </div>
    </div>

}

