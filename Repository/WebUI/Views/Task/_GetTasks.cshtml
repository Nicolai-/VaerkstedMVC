@using Repository.Concrete.Entities
@model IEnumerable<Task>

@if (Model.Count() > 0)
{
    <div>
        <h2>Opgave oversigt</h2>
    </div>
    <table id="tasktable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(t => t.CreatedStamp)</th>
                <th>@Html.DisplayNameFor(t => t.Description)</th>
                <th>@Html.DisplayNameFor(t => t.Comments)</th>
                <th>@Html.DisplayNameFor(t => t.CreatedBy)</th>
                <th>@Html.DisplayNameFor(t => t.DoneStamp)</th>
                
            </tr>
        </thead>
        <tbody id="customerTableBody">
            @foreach (Task t in Model)
            {
                <tr>
                    <td>@t.CreatedStamp</td>
                    <td>@t.Description</td>
                    <td>@t.Comments</td>                    
                    <td>@t.CreatedBy</td>
                    <td>@t.DoneStamp</td>
                </tr>
            }
        </tbody>
    </table>
}